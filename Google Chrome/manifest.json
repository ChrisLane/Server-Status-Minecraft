{
  "manifest_version": 2,

  "name": "Server Status Minecraft",
  "description": "This extension lets you check your server status easily.",
  "version": "1.4.3",
  
  "author": "Aron van Harten",
  
  "icons": { "16": "images/icon16.png",
             "48": "images/icon48.png",
            "128": "images/icon128.png" },
  
  "content_security_policy": "script-src 'self' https://stats.g.doubleclick.net; object-src 'self'",
  
  "options_page": "options.html",
  "background": {
    "scripts": ["js/jquery-1.11.0.min.js", "js/background.js", "js/ga.js"]
  },
  "browser_action": {
    "default_icon": "images/up.png",
    "default_popup": "popup.html"
  }
}