{
  "manifest_version": 2,

  "name": "Minecraft Server Status",
  "description": "This extension lets you check your server status easily.",
  "version": "1.1.2",
  
  "author": "Aron van Harten",
  
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
            "128": "icon128.png" },
  
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "http://minecraft-api.com/"
  ],
  "browser_action": {
    "default_icon": "up.png",
    "default_popup": "popup.html"
  }
}